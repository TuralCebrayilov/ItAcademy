@model List<Teachers>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="card-header" style="display:flex;justify-content:space-between">
                <h3>
                    Müəllimlər
                </h3>
                <div>
                    <a asp-action="Create" class="btn btn-danger text-white rounded-pill" style="margin-right:10px">Əlavə Et</a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-striped" id="example">
                    <thead>
                        <tr>
                            <th>
                                Şəkil
                            </th>
                            <th>
                                Ad
                            </th>
                             <th>
                               Doğum Tarixi
                            </th>
                             <th>
                                Maaş
                            </th>
                            <th>
                                Mobil
                            </th>
                            <th>
                                İxtisas
                            </th>
                            <th>
                                Status
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img style="width:70px; height:70px;object-fit:cover" src="~/~/../../images/@item.Image" alt="image" />
                                </td>
                                <td>
                                  @item.Name
                                </td>
                               
                                <td>
                                    @item.Birthday?.ToShortDateString()
                                </td>
                                <td>
                                    @item.Salary
                                </td>
                                <td>
                                @item.PhoneNumber
                                </td>
                                <td>
                                    @item.Courses.Name
                                </td>
                                    <td>
                                    @if (item.IsDeactive)
                                    {
                                            <span style="padding:2px 3px; background-color:red;color:white">İşləmir</span>
                                    }
                                    else
                                    {
                                            <span style="padding:2px 3px; background-color:green;color:white">İşləyir</span>
                                    }
                                </td>
                                <td>
                                    <div style="display:flex;justify-content:flex-end">

                                        <a class="btn btn-info text-white rounded-pill" style="margin-right:5px" asp-action="Update" asp-route-id="@item.Id">Dəyiş</a>
                                        @if (item.IsDeactive)
                                        {
                                                <a class="btn btn-success text-white rounded-pill" style="margin-right:5px;/*width:118px*/" asp-action="Activity" asp-route-id="@item.Id">İşləyir</a>

                                        }
                                        else
                                        {
                                                <a class="btn btn-danger text-white rounded-pill" style="margin-right:5px;/*width:118px*/" asp-action="Activity" asp-route-id="@item.Id">İşləmir</a>

                                        }
                                    </div>

                                </td>
                             @*   <td>
                                    <a class="btn btn-warning text-white rounded-pill" style="margin-right:10px" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>*@
                               
                            </tr>
                           
                        
                        }
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
