@model List<UserVM>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="card-header" style="display:flex;justify-content:space-between">
                <h3>
                    İstifadəçilər
                </h3>
                <div>
                    <a asp-action="Create" class="btn btn-danger text-white rounded-pill" style="margin-right:10px">Create</a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>

                            <th>
                                Ad
                            </th>
                            <th>
                               İstifadəçi adı
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Vəzifəsi
                            </th>
                            
                            <th>
                                Status
                            </th>
                        </tr>
                    </thead>
                    <tbody>                       
                       
                        @foreach (UserVM item in Model)
                        {
                            <tr>

                                <td>
                                    @item.Name
                                </td>

                                <td>
                                    @item.Username
                                </td>
                                <td>
                                    @item.Email
                                </td>
                                <td>
                                    @item.Role
                                </td>


                                <td>
                                    @if (item.IsDeactive)
                                    {
                                        <span style="padding:2px 3px; background-color:red;color:white">DeActive</span>
                                    }
                                    else
                                    {
                                        <span style="padding:2px 3px; background-color:green;color:white">Active</span>
                                    }
                                </td>
                                <td>
                                    <div style="display:flex;justify-content:flex-end">
                                        <a class="btn btn-warning text-white rounded-pill" style="margin-right:10px" asp-action="ResetPassword" asp-route-id="@item.Id">ResetPassword</a>
                                        <a class="btn btn-info text-white rounded-pill" style="margin-right:5px" asp-action="Update" asp-route-id="@item.Id">Update</a>

                                       
                                            @if (item.IsDeactive)
                                        {
                                            <a class="btn btn-success text-white rounded-pill" style="margin-right:5px;/*width:118px*/" asp-action="Activity" asp-route-id="@item.Id">Active</a>

                                        }
                                        else
                                        {
                                            <a class="btn btn-danger text-white rounded-pill" style="margin-right:5px;/*width:118px*/" asp-action="Activity" asp-route-id="@item.Id">DeActive</a>

                                        }
                                    </div>

                                </td>
                               

                            </tr>


                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

