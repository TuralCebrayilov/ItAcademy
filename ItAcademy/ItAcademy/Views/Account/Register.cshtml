@model RegisterVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>It Academy</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../../vendors/feather/feather.css">
    <link rel="stylesheet" href="../../vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="../../vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="../../css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="../../images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="../../images/logo1903.png" alt="logo">
                            </div>
                            <h4></h4>
                            <div asp-validation-summary="ModelOnly" style="color:red;margin-left:15px">
                            </div>
                            <form method="post">
                                <div class="form-group">
                                    <input asp-for="Name" placeholder="Ad Soyad" class="form-control form-control-lg">
                                    <span asp-validation-for="Name" style="color:red;margin-left:15px"></span>
                                </div>
                                  <div class="form-group">
                                    <input asp-for="Username" placeholder="İstifadəçi Adı" class="form-control form-control-lg">
                                    <span asp-validation-for="Username" style="color:red;margin-left:15px"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Email" placeholder="Email" class="form-control form-control-lg">
                                    <span asp-validation-for="Email" style="color:red;margin-left:15px"></span>
                                </div>
                               
                                <div class="form-group">
                                    <input asp-for="Password" placeholder="Şifrə" class="form-control form-control-lg">
                                    <span asp-validation-for="Password" style="color:red;margin-left:15px"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="CheckPassword" placeholder="Təkrar Şifrə" class="form-control form-control-lg">
                                    <span asp-validation-for="CheckPassword" style="color:red;margin-left:15px"></span>
                                </div>
                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <input asp-for="IsRemember">
                                        <label for="remember">Remember me</label>
                                        <a style="margin-left:100px">Forgot Password?</a>
                                    </div>

                                </div>
                                <div class="mb-2">
                                    <button type="submit" class="btn btn-block btn-facebook auth-form-btn">
                                        <i></i>DAXİL OL
                                    </button>
                                </div>



                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../../vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../../js/off-canvas.js"></script>
    <script src="../../js/hoverable-collapse.js"></script>
    <script src="../../js/template.js"></script>
    <script src="../../js/settings.js"></script>
    <script src="../../js/todolist.js"></script>
    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }
    <!-- endinject -->
</body>

</html>


